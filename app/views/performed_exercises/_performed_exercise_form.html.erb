<%= form_for(@performed_exercise) do |f| %>

    <div class="row">
      <div class="field col-xs-6">
        <%= f.label :exercise_id %>

        <%= f.collection_select(:exercise_id, @exercise_list, :id, :name, {:include_blank => "Please select exercise"}, {:required => true, :class => ""}) %>
        <!-- < % = f.number_field :exercise_id, placeholder: "Ex id.", class: "white_background workout_map_set_input" % > -->
      </div>
      <div class="col-xs-6">
        <%= f.label :scheduled_date %>
        <%= f.datetime_select :scheduled_date, required: true, placeholder: "scheduled_date", :minute_step => 1 %>
      </div>
    </div>
    <%= f.submit "Post" %>
<% end %>
